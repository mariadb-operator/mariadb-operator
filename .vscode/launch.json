{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Operator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/controller",
      "args": [
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
      "env": {
        "MARIADB_OPERATOR_NAME": "mariadb-operator",
        "MARIADB_OPERATOR_NAMESPACE": "default",
        "MARIADB_OPERATOR_SA_PATH": "/tmp/mariadb-operator/token",
        "MARIADB_OPERATOR_IMAGE": "ghcr.io/mariadb-operator/mariadb-operator:v0.0.24",
        "RELATED_IMAGE_MARIADB": "mariadb:11.2.2",
        "RELATED_IMAGE_EXPORTER": "prom/mysqld-exporter:v0.15.1",
      }
    },
    {
      "name": "Enterprise",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/enterprise",
      "args": [
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
      "env": {
        "MARIADB_OPERATOR_NAME": "mariadb-operator",
        "MARIADB_OPERATOR_NAMESPACE": "default",
        "MARIADB_OPERATOR_SA_PATH": "/tmp/mariadb-operator/token",
        "MARIADB_OPERATOR_IMAGE": "mariadb/mariadb-operator-enterprise:v0.0.24",
        "RELATED_IMAGE_MARIADB": "us-central1-docker.pkg.dev/mariadb-es-docker-registry/enterprise-docker/enterprise-server:10.6",
        "RELATED_IMAGE_EXPORTER": "prom/mysqld-exporter:v0.15.1",
      }
    },
    {
      "name": "Webhook",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/controller",
      "args": [
        "webhook",
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
    },
    {
      "name": "Cert controller",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/controller",
      "args": [
        "cert-controller",
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
    },
    {
      "name": "Backup",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/controller",
      "args": [
        "backup",
        "--path=backup",
        "--target-time=1970-01-01T00:00:00Z",
        "--target-file-path=backup/0-backup-target.txt",
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Restore",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/controller",
      "args": [
        "backup",
        "restore",
        "--path=backup",
        "--target-time=1970-01-01T00:00:00Z",
        "--target-file-path=backup/0-backup-target.txt",
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
      "cwd": "${workspaceRoot}"
    },
  ]
}