  "version": "0.2.0",
  "configurations": [
    {
      "name": "Operator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/main.go",
      "args": [
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
        "--service-monitor-reconciler"
      ],
      "env": {
        "MARIADB_OPERATOR_NAME": "mariadb-operator",
        "MARIADB_OPERATOR_NAMESPACE": "default",
        "MARIADB_OPERATOR_SA_PATH": "/tmp/mariadb-operator/token"
      }
    },
    {
      "name": "Webhook",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/main.go",
      "args": [
        "webhook",
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
    },
    {
      "name": "Cert controller",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/main.go",
      "args": [
        "cert-controller",
        "--log-dev",
        "--log-level=debug",
        "--log-time-encoder=iso8601",
      ],
    }
  ]
}